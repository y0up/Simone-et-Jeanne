{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block nav %}{% include "main/profile/_menu.html.twig" %}{% endblock %}

{% block main %}

    <h1>Mon Compte<div class="c-underline c-underline--h11"></div><div class="c-underline c-underline--h12"></div></h1>

    <div class="o-form">
        
        
        <h2>Mes Informations<div class="c-underline"></div></h2>
        <div class="o-form__item">
            <div class="c-input--grow">
                <h3>Prénom</h3>
                <input type="text" value="{{ user.firstName }}" class="form-control c-input" disabled>
            </div>
            <div class="c-input--grow">
                <h3>Nom</h3>
                <input type="text" value="{{ user.lastName }}" class="form-control c-input" disabled>
            </div>
            
        </div>
        <div class="o-form__item">
            <div class="c-input--grow">
                <label for="inputEmail"><h3>Email</h3></label>
                <input type="email" value="{{ user.email }}" name="email" id="inputEmail" class="form-control c-input" autocomplete="email" disabled>
                
            </div>
        </div>
        <div class="o-form__item">
            <div class="c-input--grow">
                <h3>Date de Naissance</h3>
                <input type="text" value="{{ user.dateOfBirth|date("d F Y")|format_datetime('full', 'none', locale='fr') }}" class="form-control c-input" disabled>
                
            </div>
            <div class="c-input--grow">
                <h3>Numéro de Téléphone</h3>
                <input type="text" value="{{ user.phoneNumber }}" class="form-control c-input" disabled>
                
            </div>
        </div>
        <div class="o-form__item">
            <button class="btn c-btn c-btn--small c-btn--no--margin"><a href="{{ path('info_edit', {'slug': user.slug}) }}">Editer mes Informations</a></button>
            <a href="{{ path('change_password', {'slug': user.slug}) }}">Modifier le Mot de Passe</a>
            {{ include('main/profile/user/_delete_form.html.twig') }}
        </div>
    </div>
        
        
        
        
        
        {% endblock %}
        