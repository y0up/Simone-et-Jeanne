<form method="post" action="{{ path('cart_item_delete', {'id': cartItem.id, 'slug': user.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cartItem.id) }}">
    <button class="btn">Delete</button>
</form>
