{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>SKU</th>
                <th>Price</th>
                <th>New</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.SKU }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.new ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('bo_product_show', {'product_slug': product.slug}) }}">show</a>
                    <a href="{{ path('bo_product_edit', {'slug': product.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bo_product_create') }}">Create new</a>
{% endblock %}
